{
    "name": "omni-publisher-content-ecosystem",
    "version": "1.0.0",
    "description": "Write Once, Publish Everywhere - Multi-platform blog publishing automation",
    "main": "dist/publish.js",
    "type": "module",
    "scripts": {
        "build": "tsc && node dist/build-site.js",
        "publish": "node dist/publish.js",
        "publish:mock": "MOCK_MODE=true node dist/publish.js",
        "publish:dry": "node dist/publish.js --dry-run",
        "start:mock": "node scripts/mock-server.js",
        "test": "npm run start:mock & sleep 2 && npm run publish:mock && kill %1",
        "compile": "tsc"
    },
    "keywords": [
        "publishing",
        "automation",
        "blog",
        "content",
        "syndication"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@types/node": "^20.10.0",
        "axios": "^1.6.2",
        "dotenv": "^16.3.1",
        "gray-matter": "^4.0.3",
        "marked": "^11.0.0",
        "oauth": "^0.10.0"
    },
    "devDependencies": {
        "express": "^4.18.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}